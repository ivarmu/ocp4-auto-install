apiVersion: v1
baseDomain: {{ ocp4_base_domain }}
compute:
- hyperthreading: Enabled
  name: worker
  platform:
{% if cloud_provider == 'ec2' %}
    aws:
      type: {{ worker_instance_type }}
{% endif %}
  replicas: {{ worker_instance_count }}
controlPlane:
  hyperthreading: Enabled
  name: master
  platform:
{% if cloud_provider == 'ec2' %}
    aws:
      type: {{ master_instance_type }}
{% endif %}
  replicas: {{ master_instance_count }}
metadata:
  name: {{ cluster_name }}
networking:
  clusterNetwork:
  - cidr: 10.128.0.0/14
    hostPrefix: 23
  machineCIDR: {{ machineCIDR }}
  networkType: OpenshiftSDN
  serviceNetwork:
  - 172.30.0.0/16
platform:
{% if cloud_provider == 'ec2' %}
  aws:
    region: {{ aws_region }}
{% elif cloud_provider == 'vcenter' %}
  vsphere:
    apiVIP: {{ vcenter_VIP }}
    ingressVIP: {{ vcenter_ingressVIP }}
    cluster: {{ vcenter_cluster }}
    datacenter: {{ vcenter_datacenter }}
    defaultDatastore: {{ vcenter_datastore }}
    folder: {{ vcenter_folder }}
    network: {{ vcenter_network }}
    username: {{ vcenter_username }}
    password: {{ vcenter_password }}
    vCenter: {{ vcenter_hostname }}
{% endif %}
publish: External
pullSecret: '{{ ocp4_pull_secret | replace( "'", '"') | replace( 'u"', '"') }}'
sshKey: |
  {{ idrsapub.content | b64decode }}
